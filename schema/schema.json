{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/DataDog/datadog-static-analyzer/schema/schema.json",
  "title": "Datadog Static Analyzer Configuration Versions [v1]",
  "oneOf": [
    {
      "allOf": [
        {
          "type": "object",
          "anyOf": [
            {
              "properties": {
                "schema-version": {
                  "const": "v1"
                }
              }
            },
            {
              "not": {
                "required": [
                  "schema-version"
                ]
              }
            }
          ]
        },
        {
          "$ref": "https://raw.githubusercontent.com/DataDog/datadog-static-analyzer/schema/v1/schema.json"
        }
      ]
    }
  ]
}


