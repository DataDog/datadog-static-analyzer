  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug datadog-static-analyzer secrets",
      "type": "lldb",             
      "request": "launch",
      "cargo": {
        "args": [
          "build",
          "--bin",
          "datadog-static-analyzer"
        ],
        "filter": {
          "name": "datadog-static-analyzer",
          "kind": "bin"
        }
      },
      "args": ["--directory", "", "--output", "result.json", "--format", "sarif", "--debug", "yes", "--enable-secrets", "true", "--enable-static-analysis", "false"],
      "cwd": "${workspaceFolder}", 
      "program": "${cargo:program}",
      "env": {
        "DD_API_KEY": "",
        "DD_APP_KEY": "",
        "DD_SITE": ""
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug 'datadog-static-analyzer-server'",
      "cargo": {
        "args": [
          "build",
          "--bin=datadog-static-analyzer-server",
          "--package=datadog-static-analyzer"
        ],
        "filter": {
          "name": "datadog-static-analyzer-server",
          "kind": "bin"
        }
      },
      "args": ["-p", "49159", "-e"],
      "env": {
        "RUST_LOG": "trace"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Tests in Server Binary",
      "cargo": {
        "args": ["test", "--no-run", "--package=datadog-static-analyzer"],
        "filter": {
          "name": "datadog-static-analyzer-server"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}/crates/bins"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Tests in Kernel",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=static-analysis-kernel"
        ],
        "filter": {
          "name": "static-analysis-kernel",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}/crates/static-analysis-kernel"
    }
  ]
}
